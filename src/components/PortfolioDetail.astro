---
// Props: item (portfolio entry)
export interface Props {
  item: CollectionEntry<"portfolio">;
}
const { item } = Astro.props;
import { Image } from 'astro:assets';
import { render, type CollectionEntry } from 'astro:content';
const { Content } = await render(item); // Renders the content of the event entry

---
<article style="max-width: 700px; margin: 0 auto;">
  <h1>{item.data.title}</h1>
  <Image src={item.data.image} alt={item.data.title} style="max-width: 300px; border-radius: 8px;" />
  <Content/>
</article>
