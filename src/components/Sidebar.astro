---
// Sidebar.astro: Receives a `portfolio` prop (array of entries)
export interface Props {
  portfolio: Array<CollectionEntry<Collection<"portfolio">>>;
}
const { portfolio } = Astro.props;
---
<aside style="width: 220px; padding: 2rem 1rem; background: #f6f6fa; height: 100vh; box-sizing: border-box; border-right: 1px solid #eee;">
  <h2 style="font-size: 1.2rem; margin-bottom: 1rem;">Portfolio Links</h2>
  <nav>
    <ul style="list-style: none; padding: 0; margin: 0;">
      {portfolio.map(item => (
        <li style="margin-bottom: 0.75rem;">
          <a href={"/portfolio/" + item.slug} style="color: #333; text-decoration: none; font-weight: 500;">
            {item.data.title}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</aside>
